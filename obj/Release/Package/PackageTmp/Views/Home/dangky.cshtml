@model doanwebnangcao.Models.RegisterViewModel

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="config">
    <!--====== App Content ======-->
    <div class="app-content">
        <!--====== Section 1 ======-->
        <div class="u-s-p-y-60">
            <!--====== Section Content ======-->
            <div class="section__content">
                <div class="container">
                    <div class="breadcrumb">
                        <div class="breadcrumb__wrap">
                            <ul class="breadcrumb__list">
                                <li class="has-separator">
                                    @Html.ActionLink("Home", "Index", "Home")
                                </li>
                                <li class="is-marked">
                                    @Html.ActionLink("Signin", "dangnhap", "Home")
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section 1 ======-->
        <!--====== Section 2 ======-->
        <div class="u-s-p-b-60">
            <!--====== Section Intro ======-->
            <div class="section__intro u-s-m-b-60">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section__text-wrap">
                                <h1 class="section__heading u-c-secondary">CREATE AN ACCOUNT</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section Intro ======-->
            <!--====== Section Content ======-->
            <div class="section__content">
                <div class="container">
                    <div class="row row--center">
                        <div class="col-lg-6 col-md-8 u-s-m-b-30">
                            <div class="l-f-o">
                                <div class="l-f-o__pad-box">
                                    <h1 class="gl-h1">PERSONAL INFORMATION</h1>
                                    @using (Html.BeginForm("dangky", "Home", FormMethod.Post, new { @class = "l-f-o__form", id = "registerForm" }))
                                    {
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger u-s-m-b-15" })

                                        <div class="u-s-m-b-30">
                                            @Html.LabelFor(m => m.FirstName, new { @class = "gl-label" })
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "input-text input-text--primary-style", placeholder = "First Name", id = "reg-fname" })
                                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                            <span class="error-message" id="reg-fname-error"></span>
                                        </div>

                                        <div class="u-s-m-b-30">
                                            @Html.LabelFor(m => m.LastName, new { @class = "gl-label" })
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "input-text input-text--primary-style", placeholder = "Last Name", id = "reg-lname" })
                                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                            <span class="error-message" id="reg-lname-error"></span>
                                        </div>

                                        <div class="u-s-m-b-30">
                                            @Html.LabelFor(m => m.Birthday, new { @class = "gl-label" })
                                            @Html.TextBoxFor(m => m.Birthday, new { @class = "input-text input-text--primary-style", type = "date", id = "birth-date" })
                                            @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
                                            <span class="error-message" id="birth-date-error"></span>
                                        </div>

                                        <div class="u-s-m-b-30">
                                            @Html.LabelFor(m => m.Gender, new { @class = "gl-label" })
                                            @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female" }, "Male"), "Select", new { @class = "select-box select-box--primary-style u-w-100", id = "gender" })
                                            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                            <span class="error-message" id="gender-error"></span>
                                        </div>

                                        <div class="u-s-m-b-30">
                                            @Html.LabelFor(m => m.Email, new { @class = "gl-label" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "input-text input-text--primary-style", placeholder = "Enter E-mail", id = "reg-email" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            <span class="error-message" id="reg-email-error"></span>
                                        </div>

                                        <div class="u-s-m-b-30">
                                            @Html.LabelFor(m => m.Password, new { @class = "gl-label" })
                                            @Html.PasswordFor(m => m.Password, new { @class = "input-text input-text--primary-style", placeholder = "Enter Password", id = "reg-password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            <span class="error-message" id="reg-password-error"></span>
                                        </div>

                                        <div class="u-s-m-b-15">
                                            <button class="btn btn--e-transparent-brand-b-2" type="submit">CREATE</button>
                                        </div>

                                        @Html.ActionLink("Return to Store", "Index", "Home", null, new { @class = "gl-link" })
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section Content ======-->
        </div>
    </div>
</main>

<style>
    .text-danger {
        color: #ff0000 !important; /* Màu đỏ cho thông báo lỗi */
        font-size: 14px;
        display: block;
        margin-top: 5px;
    }

    .error-message {
        color: #ff0000 !important; /* Màu đỏ cho thông báo lỗi client-side */
        font-size: 14px;
        display: block;
        margin-top: 5px;
    }
</style>

<script src="~/pep/js/dangky.js"></script>
<script src="@Url.Content("~/pep/js/vendor.js")"></script>
<script src="@Url.Content("~/pep/js/jquery.shopnav.js")"></script>
<script src="@Url.Content("~/pep/js/app.js")"></script>