                                        @{
                                            double avgRating = 0;
                                            if (relatedProduct.Reviews != null && relatedProduct.Reviews.Count > 0)
                                            {
                                                double totalRating = 0;
                                                int reviewCountForAvg = 0;
                                                foreach (var review in relatedProduct.Reviews)
                                                {
                                                    totalRating += review.Rating;
                                                    reviewCountForAvg++;
                                                }
                                                avgRating = reviewCountForAvg > 0 ? totalRating / reviewCountForAvg : 0;
                                            }
                                        }
                                        @if (relatedProduct.Reviews != null && relatedProduct.Reviews.Count > 0)
                                        {
                                            for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= avgRating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else if (i - 0.5 <= avgRating)
                                                {
                                                    <i class="fas fa-star-half-alt"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                            <span class="product-o__review">(@relatedProduct.Reviews.Count)</span>
                                        }
                                        else
                                        {
                                            <span class="product-o__review">(0)</span>
                                        }
