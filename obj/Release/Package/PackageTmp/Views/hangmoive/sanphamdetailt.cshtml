@section Scripts {
    <script>
        $(document).ready(function () {
            // Bind sự kiện tăng/giảm số lượng
            $(".input-counter__plus").on("click", function () {
                var input = $(this).siblings(".input-counter__text");
                var max = parseInt(input.data("max")) || 1000;
                var current = parseInt(input.val()) || 0;
                if (current < max) {
                    input.val(current + 1);
                }
            });

            $(".input-counter__minus").on("click", function () {
                var input = $(this).siblings(".input-counter__text");
                var min = parseInt(input.data("min")) || 1;
                var current = parseInt(input.val()) || 1;
                if (current > min) {
                    input.val(current - 1);
                }
            });

            // Cập nhật giá khi chọn biến thể
            $("#variant-id").change(function () {
                var selectedOption = $(this).find("option:selected");
                var price = selectedOption.data("price");
                var stock = selectedOption.data("stock");
                $(".pd-detail__price").text('$' + price.toFixed(2));
                $(".pd-detail__stock").text(stock + ' trong kho');
                if (stock <= 5 && stock > 0) {
                    $(".pd-detail__left").text('Chỉ còn ' + stock + ' sản phẩm');
                } else {
                    $(".pd-detail__left").text('');
                }
            }).trigger("change");
        });

        function addToCart(form) {
            // Kiểm tra đăng nhập
            var userId = '@Session["UserId"]';
            if (!userId) {
                alert('Vui lòng đăng nhập để thêm sản phẩm vào giỏ hàng.');
                window.location.href = '@Url.Action("DangNhap", "Home")';
                return;
            }

            var productId = $(form).find('input[name="productId"]').val();
            var variantId = $(form).find('select[name="variantId"]').val();
            var quantity = $(form).find('input[name="quantity"]').val();
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("AddToCart", "GioHang")',
                type: 'POST',
                data: {
                    productId: productId,
                    variantId: variantId,
                    quantity: quantity,
                    __RequestVerificationToken: token
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Đã có lỗi xảy ra. Vui lòng thử lại.');
                }
            });
        }

        function addToWishlist(productId) {
            // Kiểm tra đăng nhập
            var userId = '@Session["UserId"]';
            if (!userId) {
                alert('Vui lòng đăng nhập để thêm vào danh sách yêu thích.');
                window.location.href = '@Url.Action("DangNhap", "Home")';
                return;
            }

            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("AddToWishlist", "yeuthich")',
                type: 'POST',
                data: {
                    productId: productId,
                    __RequestVerificationToken: token
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        // Cập nhật số lượng wishlist trên giao diện
                        var currentCount = parseInt($('.pd-detail__click-count').text().replace('(', '').replace(')', '')) || 0;
                        $('.pd-detail__click-count').text('(' + (currentCount + 1) + ')');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Đã có lỗi xảy ra. Vui lòng thử lại.');
                }
            });
        }
    </script>
