@model doanwebnangcao.Models.Product
@using System.Linq

@{
    ViewBag.Title = "Chi tiết sản phẩm - " + Model.Name;
    int reviewCount = Model.Reviews != null ? Model.Reviews.Count : 0;
    double averageRating = 0;
    if (Model.Reviews != null && Model.Reviews.Count > 0)
    {
        double totalRating = 0;
        int reviewCountForAvg = 0;
        foreach (var review in Model.Reviews)
        {
            totalRating += review.Rating;
            reviewCountForAvg++;
        }
        averageRating = reviewCountForAvg > 0 ? totalRating / reviewCountForAvg : 0;
    }
}

<main>
    <!--====== App Content ======-->
    <div class="app-content">
        <!--====== Section 1 ======-->
        <div class="u-s-p-t-90">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <!--====== Product Breadcrumb ======-->
                        <div class="pd-breadcrumb u-s-m-b-30">
                            <ul class="pd-breadcrumb__list">
                                <li class="has-separator">
                                    <a href="@Url.Action("Index", "TrangChu")">Trang chủ</a>
                                </li>
                                <li class="has-separator">
                                    <a href="@Url.Action("hangmoive", "HangMoiVe", new { categoryId = Model.Subcategory.CategoryId })">@Model.Subcategory.Category.Name</a>
                                </li>
                                <li class="has-separator">
                                    <a href="@Url.Action("hangmoive", "HangMoiVe", new { subcategoryId = Model.SubcategoryId })">@Model.Subcategory.Name</a>
                                </li>
                                <li class="is-marked">
                                    <a href="#">@Model.Name</a>
                                </li>
                            </ul>
                        </div>
                        <!--====== End - Product Breadcrumb ======-->
                        <!--====== Product Detail Zoom ======-->
                        <div class="pd u-s-m-b-30">
                            <div class="slider-fouc pd-wrap">
                                <div id="pd-o-initiate">
                                    @{
                                        var images = new List<string>();
                                        if (Model.ProductVariants != null && Model.ProductVariants.Count > 0)
                                        {
                                            foreach (var variant in Model.ProductVariants)
                                            {
                                                if (!string.IsNullOrEmpty(variant.VariantImageUrl) && !images.Contains(variant.VariantImageUrl))
                                                {
                                                    images.Add(variant.VariantImageUrl);
                                                }
                                            }
                                        }
                                        if (Model.ProductImages != null && Model.ProductImages.Count > 0)
                                        {
                                            foreach (var image in Model.ProductImages)
                                            {
                                                if (!string.IsNullOrEmpty(image.ImageUrl) && !images.Contains(image.ImageUrl))
                                                {
                                                    images.Add(image.ImageUrl);
                                                }
                                            }
                                        }
                                        if (!string.IsNullOrEmpty(Model.ImageUrl) && !images.Contains(Model.ImageUrl))
                                        {
                                            images.Insert(0, Model.ImageUrl);
                                        }
                                        if (images.Count == 0)
                                        {
                                            images.Add("/images/placeholder.jpg");
                                        }

                                        foreach (var image in images)
                                        {
                                            <div class="pd-o-img-wrap" data-src="@image">
                                                <img class="u-img-fluid main-product-image" src="@image" data-zoom-image="@image" alt="@Model.Name" onError="this.src='/images/placeholder.jpg'" />
                                            </div>
                                        }
                                    }
                                </div>
                                <span class="pd-text">Click for larger zoom</span>
                            </div>
                            <div class="u-s-m-t-15">
                                <div class="slider-fouc">
                                    <div id="pd-o-thumbnail">
                                        @foreach (var image in images)
                                        {
                                            <div>
                                                <img class="u-img-fluid thumbnail-product-image" src="@image" alt="@Model.Name" onError="this.src='/images/placeholder.jpg'" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--====== End - Product Detail Zoom ======-->
                    </div>
                    <div class="col-lg-7">
                        <!--====== Product Right Side Details ======-->
                        <div class="pd-detail">
                            <div>
                                <span class="pd-detail__name">@Model.Name</span>
                            </div>
                            <div>
                                <div class="pd-detail__inline">
                                    <span class="pd-detail__price">
                                        @(Model.DiscountedPrice != null && Model.DiscountedPrice.HasValue ? "$" + Model.DiscountedPrice.Value.ToString("F2") : (Model.Price != null ? "$" + Model.Price.ToString("F2") : "$0.00"))
                                    </span>
                                    @if (Model.DiscountedPrice != null && Model.DiscountedPrice.HasValue && Model.Price != null)
                                    {
                                        <span class="pd-detail__discount">
                                            (@(Math.Round(((Model.Price - Model.DiscountedPrice.Value) / Model.Price) * 100))% OFF)
                                        </span>
                                        <del class="pd-detail__del">$@Model.Price.ToString("F2")</del>
                                    }
                                </div>
                            </div>
                            <div class="u-s-m-b-15">
                                <div class="pd-detail__rating gl-rating-style">
                                    @if (Model.Reviews != null && Model.Reviews.Count > 0)
                                    {
                                        for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= averageRating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (i - 0.5 <= averageRating)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                        <span class="pd-detail__review u-s-m-l-4">
                                            <a data-click-scroll="#view-review">@reviewCount Đánh giá</a>
                                        </span>
                                    }
                                    else
                                    {
                                        <span>Chưa có đánh giá</span>
                                    }
                                </div>
                            </div>
                            <div class="u-s-m-b-15">
                                <div class="pd-detail__inline">
                                    @{
                                        int totalStock = 0;
                                        if (Model.ProductVariants != null)
                                        {
                                            foreach (var variant in Model.ProductVariants)
                                            {
                                                totalStock += variant.StockQuantity;
                                            }
                                        }
                                    }
                                    <span class="pd-detail__stock">@totalStock trong kho</span>
                                    @if (totalStock <= 5 && totalStock > 0)
                                    {
                                        <span class="pd-detail__left">Chỉ còn @totalStock sản phẩm</span>
                                    }
                                </div>
                            </div>
                            <div class="u-s-m-b-15">
                                <span class="pd-detail__preview-desc">@(Model.Description != null ? Model.Description : "Không có mô tả")</span>
                            </div>
                            <div class="u-s-m-b-15">
                                <div class="pd-detail__inline">
                                    <span class="pd-detail__click-wrap">
                                        <i class="far fa-heart u-s-m-r-6"></i>
                                        <a href="javascript:void(0)" onclick="addToWishlist(@Model.Id)">Thêm vào danh sách mong muốn</a>
                                        <span class="pd-detail__click-count">
                                            (@(Model.Wishlists != null ? Model.Wishlists.Count : 0))
                                        </span>
                                    </span>
                                </div>
                            </div>
                            <div class="u-s-m-b-15">
                                <div class="pd-detail__inline">
                                    <span class="pd-detail__click-wrap">
                                        <i class="far fa-envelope u-s-m-r-6"></i>
                                        <a href="#">Gửi email khi giảm giá</a>
                                        <span class="pd-detail__click-count">(0)</span>
                                    </span>
                                </div>
                            </div>
                            <div class="u-s-m-b-15">
                                <ul class="pd-social-list">
                                    <li>
                                        <a class="s-fb--color-hover" href="#"><i class="fab fa-facebook-f"></i></a>
                                    </li>
                                    <li>
                                        <a class="s-tw--color-hover" href="#"><i class="fab fa-twitter"></i></a>
                                    </li>
                                    <li>
                                        <a class="s-insta--color-hover" href="#"><i class="fab fa-instagram"></i></a>
                                    </li>
                                    <li>
                                        <a class="s-wa--color-hover" href="#"><i class="fab fa-whatsapp"></i></a>
                                    </li>
                                    <li>
                                        <a class="s-gplus--color-hover" href="#"><i class="fab fa-google-plus-g"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="u-s-m-b-15">
                                @if (Session["UserId"] != null)
                                {
                                    <form class="pd-detail__form" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        @if (Model.ProductVariants != null && Model.ProductVariants.Count > 0)
                                        {
                                            <div class="u-s-m-b-15">
                                                <label for="variant-id">Kích thước & Màu sắc:</label>
                                                <select name="variantId" id="variant-id" class="select-box select-box--primary-style">
                                                    @foreach (var variant in Model.ProductVariants)
                                                    {
                                                        if (variant.IsActive && variant.StockQuantity > 0)
                                                        {
                                                            <option value="@variant.Id"
                                                                    data-price="@(variant.VariantDiscountedPrice != null && variant.VariantDiscountedPrice.HasValue ? variant.VariantDiscountedPrice.Value : (variant.VariantPrice != null && variant.VariantPrice.HasValue ? variant.VariantPrice.Value : (Model.DiscountedPrice != null && Model.DiscountedPrice.HasValue ? Model.DiscountedPrice.Value : (Model.Price != null ? Model.Price : 0))))"
                                                                    data-stock="@variant.StockQuantity">
                                                                @(variant.Size != null ? variant.Size.Name : "Không có kích thước") - @(variant.Color != null ? variant.Color.Name : "Không có màu") (Tồn kho: @variant.StockQuantity)
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        }
                                        <div class="u-s-m-b-15">
                                            <div class="input-counter">
                                                <span class="input-counter__minus fas fa-minus"></span>
                                                <input class="input-counter__text input-counter--text-primary-style" type="text" name="quantity" value="1" data-min="1" data-max="1000">
                                                <span class="input-counter__plus fas fa-plus"></span>
                                            </div>
                                        </div>
                                        <div class="u-s-m-b-15">
                                            <button class="btn btn--e-brand-b-2" type="button" onclick="addToCart(this.form)">Thêm vào giỏ hàng</button>
                                        </div>
                                        <div class="u-s-m-b-15">
                                            <button class="btn btn--e-brand-b-2" type="submit" formaction="@Url.Action("BuyNow", "Muahang")">Mua Ngay</button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <p>Vui lòng <a href="@Url.Action("DangNhap", "Home")">đăng nhập</a> để thêm sản phẩm vào giỏ hàng.</p>
                                }
                            </div>
                            <div class="u-s-m-b-15">
                                <span class="pd-detail__label u-s-m-b-8">Chính sách sản phẩm:</span>
                                <ul class="pd-detail__policy-list">
                                    <li>
                                        <i class="fas fa-check-circle u-s-m-r-8"></i>
                                        <span>Bảo vệ người mua.</span>
                                    </li>
                                    <li>
                                        <i class="fas fa-check-circle u-s-m-r-8"></i>
                                        <span>Hoàn tiền đầy đủ nếu không nhận được đơn hàng.</span>
                                    </li>
                                    <li>
                                        <i class="fas fa-check-circle u-s-m-r-8"></i>
                                        <span>Chấp nhận đổi trả nếu sản phẩm không đúng mô tả.</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!--====== End - Product Right Side Details ======-->
                    </div>
                </div>
            </div>
        </div>

        <!--====== Product Detail Tab ======-->
        <div class="u-s-p-y-90">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pd-tab">
                            <div class="u-s-m-b-30">
                                <ul class="nav pd-tab__list">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#pd-desc">MÔ TẢ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#pd-tag">THẺ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="view-review" data-toggle="tab" href="#pd-rev">
                                            ĐÁNH GIÁ
                                            <span>(@reviewCount)</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="tab-content">
                                <!--====== Tab 1 ======-->
                                <div class="tab-pane fade show active" id="pd-desc">
                                    <div class="pd-tab__desc">
                                        <div class="u-s-m-b-15">
                                            <p>@(Model.Description != null ? Model.Description : "Không có mô tả")</p>
                                        </div>
                                        <div class="u-s-m-b-30">
                                            <ul>
                                                <li>
                                                    <i class="fas fa-check u-s-m-r-8"></i>
                                                    <span>Bảo vệ người mua.</span>
                                                </li>
                                                <li>
                                                    <i class="fas fa-check u-s-m-r-8"></i>
                                                    <span>Hoàn tiền đầy đủ nếu không nhận được đơn hàng.</span>
                                                </li>
                                                <li>
                                                    <i class="fas fa-check u-s-m-r-8"></i>
                                                    <span>Chấp nhận đổi trả nếu sản phẩm không đúng mô tả.</span>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="u-s-m-b-15">
                                            <h4>THÔNG TIN SẢN PHẨM</h4>
                                        </div>
                                        <div class="u-s-m-b-15">
                                            <div class="pd-table gl-scroll">
                                                <table>
                                                    <tbody>
                                                        <tr>
                                                            <td>Mã sản phẩm</td>
                                                            <td>@Model.ProductCode</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Danh mục</td>
                                                            <td>@Model.Subcategory.Name</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Ngày tạo</td>
                                                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy")</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--====== End - Tab 1 ======-->
                                <!--====== Tab 2 ======-->
                                <div class="tab-pane" id="pd-tag">
                                    <div class="pd-tab__tag">
                                        <h2 class="u-s-m-b-15">THÊM THẺ</h2>
                                        <div class="u-s-m-b-15">
                                            <form>
                                                <input class="input-text input-text--primary-style" type="text">
                                                <button class="btn btn--e-brand-b-2" type="submit">THÊM THẺ</button>
                                            </form>
                                        </div>
                                        <span class="gl-text">Sử dụng khoảng cách để tách các thẻ. Sử dụng dấu nháy đơn (') cho cụm từ.</span>
                                    </div>
                                </div>
                                <!--====== End - Tab 2 ======-->
                                <!--====== Tab 3 ======-->
                                <div class="tab-pane" id="pd-rev">
                                    <div class="pd-tab__rev">
                                        <div class="u-s-m-b-30">
                                            <div class="pd-tab__rev-score">
                                                <div class="u-s-m-b-8">
                                                    <h2>@reviewCount Đánh giá - @averageRating.ToString("F1") (Tổng thể)</h2>
                                                </div>
                                                <div class="gl-rating-style-2 u-s-m-b-8">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= averageRating)
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        else if (i - 0.5 <= averageRating)
                                                        {
                                                            <i class="fas fa-star-half-alt"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    }
                                                </div>
                                                <div class="u-s-m-b-8">
                                                    <h4>Chúng tôi muốn nghe ý kiến từ bạn!</h4>
                                                </div>
                                                <span class="gl-text">Hãy cho chúng tôi biết bạn nghĩ gì về sản phẩm này</span>
                                            </div>
                                        </div>
                                        @if (Model.Reviews != null && Model.Reviews.Count > 0)
                                        {
                                            <div class="u-s-m-b-30">
                                                <form class="pd-tab__rev-f1">
                                                    <div class="rev-f1__group">
                                                        <div class="u-s-m-b-15">
                                                            <h2>@Model.Reviews.Count Đánh giá cho @Model.Name</h2>
                                                        </div>
                                                        <div class="u-s-m-b-15">
                                                            <label for="sort-review"></label>
                                                            <select class="select-box select-box--primary-style" id="sort-review">
                                                                <option selected>Sắp xếp theo: Đánh giá tốt nhất</option>
                                                                <option>Sắp xếp theo: Đánh giá tệ nhất</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="rev-f1__review">
                                                        @foreach (var review in Model.Reviews)
                                                        {
                                                            <div class="review-o u-s-m-b-15">
                                                                <div class="review-o__info u-s-m-b-8">
                                                                    <span class="review-o__name">Người dùng</span>
                                                                    <span class="review-o__date">@review.CreatedAt.ToString("dd MMM yyyy HH:mm:ss")</span>
                                                                </div>
                                                                <div class="review-o__rating gl-rating-style u-s-m-b-8">
                                                                    @for (int i = 1; i <= 5; i++)
                                                                    {
                                                                        if (i <= review.Rating)
                                                                        {
                                                                            <i class="fas fa-star"></i>
                                                                        }
                                                                        else if (i - 0.5 <= review.Rating)
                                                                        {
                                                                            <i class="fas fa-star-half-alt"></i>
                                                                        }
                                                                        else
                                                                        {
                                                                            <i class="far fa-star"></i>
                                                                        }
                                                                    }
                                                                    <span>(@review.Rating)</span>
                                                                </div>
                                                                <p class="review-o__text">@review.Comment</p>
                                                            </div>
                                                        }
                                                    </div>
                                                </form>
                                            </div>
                                        }
                                        <div class="u-s-m-b-30">
                                            <form class="pd-tab__rev-f2">
                                                <h2 class="u-s-m-b-15">Thêm Đánh giá</h2>
                                                <span class="gl-text u-s-m-b-15">Địa chỉ email của bạn sẽ không được công khai. Các trường bắt buộc được đánh dấu *</span>
                                                <div class="u-s-m-b-30">
                                                    <div class="rev-f2__table-wrap gl-scroll">
                                                        <table class="rev-f2__table">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i>
                                                                            <span>(1)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                                                            <span>(1.5)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i>
                                                                            <span>(2)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                                                            <span>(2.5)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                                                            <span>(3)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                                                            <span>(3.5)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                                                            <span>(4)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                                                            <span>(4.5)</span>
                                                                        </div>
                                                                    </th>
                                                                    <th>
                                                                        <div class="gl-rating-style-2">
                                                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                                                            <span>(5)</span>
                                                                        </div>
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>
                                                                        <div class="radio-box">
                                                                            <input type="radio" id="star-1" name="rating">
                                                                            <div class="radio-box__state radio-box__state--primary">
                                                                                <label class="radio-box__label" for="star-1"></label>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="radio-box">
                                                                            <input type="radio" id="star-1.5" name="rating">
                                                                            <div class="radio-box__state radio-box__state--primary">
                                                                                <label class="radio-box__label" for="star-1.5"></label>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="radio-box">
                                                                            <input type="radio" id="star-2" name="rating">
                                                                            <div class="radio-box__state radio-box__state--primary">
                                                                                <label class="radio-box__label" for="star-2"></label>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="radio-box">
                                                                            <input type="radio" id="star-2.5" name="rating">
                                                                            <div class="radio-box__state radio-box__state--primary">
                                                                                <label class="radio-box__label" for="star-2.5"></label>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="radio-box">
                                                                            <input type="radio" id="star-3" name="rating">
                                                                            <div class="radio-box__state radio-box__state--primary">
                                                                                <label class="radio-box__label" for="star-3"></label>
                                                                            </div>
                                                                        </div>
                                                                    </td>
