                                                                                                            {
                                                                                                                foreach (var product in products)
                                                                                                                {
                                                                                                                    <li>
                                                                                                                        <a href="@Url.Action("ProductDetail", "Product", new { productId = product.Id })">@product.Name</a>
                                                                                                                    </li>
                                                                                                                }
                                                                                                            }
                                                                                                            else
