@model List<doanwebnangcao.Models.Product>
@using doanwebnangcao.DTO

@{
    ViewBag.Title = "Quản lý Sản phẩm";
    ViewBag.ActivePage = "SanPham";
    var subcategories = ViewBag.Subcategories as List<doanwebnangcao.Models.Subcategory>;
    var sizes = ViewBag.Sizes as List<doanwebnangcao.Models.Size>;
    var colors = ViewBag.Colors as List<doanwebnangcao.Models.Color>;
}

<h2 class="mb-4 text-dark">Quản lý Sản phẩm</h2>

<!-- Form thêm sản phẩm mới -->
<div class="card mb-4">
    <div class="card-header">
        <span>Thêm sản phẩm mới</span>
    </div>
    <div class="card-body p-4">
        @if (!sizes.Any() || !colors.Any())
        {
            <div class="alert alert-warning">
                @if (!sizes.Any())
                {
                    <p>Vui lòng thêm <a href="@Url.Action("Sizes", "Admin")">kích thước</a> trước khi tạo sản phẩm.</p>
                }
                @if (!colors.Any())
                {
                    <p>Vui lòng thêm <a href="@Url.Action("Colors", "Admin")">màu sắc</a> trước khi tạo sản phẩm.</p>
                }
            </div>
        }
        else
        {
            <form id="addProductForm" action="@Url.Action("CreateProduct", "Admin")" method="post" enctype="multipart/form-data">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="row mb-3">
                    <label for="SubcategoryId" class="col-md-3 col-form-label fw-bold">Danh mục con</label>
                    <div class="col-md-9">
                        @if (subcategories != null && subcategories.Any())
                        {
                            <select name="SubcategoryId" class="form-control" required>
                                <option value="">-- Chọn danh mục con --</option>
                                @foreach (var subcategory in subcategories)
                                {
                                    <option value="@subcategory.Id">
                                        @subcategory.Name @(subcategory.Category != null ? " (" + subcategory.Category.Name + ")" : "")
                                    </option>
                                }
                            </select>
                        }
                        else
                        {
                            <select class="form-control" disabled>
                                <option>Không có danh mục con nào</option>
                            </select>
                            <p class="text-danger">Vui lòng thêm danh mục con trước khi tạo sản phẩm.</p>
                        }
                        <span class="text-danger field-validation-error" data-valmsg-for="SubcategoryId" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="ProductCode" class="col-md-3 col-form-label fw-bold">Mã sản phẩm</label>
                    <div class="col-md-9">
                        <input type="text" name="ProductCode" class="form-control" required maxlength="50" />
                        <span class="text-danger field-validation-error" data-valmsg-for="ProductCode" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Name" class="col-md-3 col-form-label fw-bold">Tên sản phẩm</label>
                    <div class="col-md-9">
                        <input type="text" name="Name" class="form-control" required maxlength="200" />
                        <span class="text-danger field-validation-error" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Price" class="col-md-3 col-form-label fw-bold">Giá mặc định</label>
                    <div class="col-md-9">
                        <input type="number" name="Price" class="form-control" required min="0" step="1000" />
                        <span class="text-danger field-validation-error" data-valmsg-for="Price" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="ImageFile" class="col-md-3 col-form-label fw-bold">Ảnh chính</label>
                    <div class="col-md-9">
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Description" class="col-md-3 col-form-label fw-bold">Mô tả</label>
                    <div class="col-md-9">
                        <textarea name="Description" class="form-control" rows="3"></textarea>
                        <span class="text-danger field-validation-error" data-valmsg-for="Description" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="IsActive" class="col-md-3 col-form-label fw-bold">Trạng thái</label>
                    <div class="col-md-9">
                        <div class="form-check">
                            <input type="checkbox" name="IsActive" id="IsActive" value="true" class="form-check-input" checked />
                            <label class="form-check-label" for="IsActive">Hoạt động</label>
                            <input type="hidden" name="IsActive" value="false" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" class="btn btn-primary me-2" @(subcategories != null && subcategories.Any() && sizes.Any() && colors.Any() ? "" : "disabled")>
                            <i class="fas fa-save me-1"></i> Thêm sản phẩm
                        </button>
                        <button type="reset" class="btn btn-secondary"><i class="fas fa-undo me-1"></i> Làm mới</button>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

<!-- Danh sách sản phẩm -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Danh sách sản phẩm</span>
    </div>
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="table-responsive" style="overflow-x: auto;">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width: 3%; min-width: 40px;">#</th>
                        <th style="width: 10%; min-width: 60px;">Mã sản phẩm</th>
                        <th style="width: 7%; min-width: 50px;">Hình ảnh</th>
                        <th style="width: 10%; min-width: 200px;">Tên sản phẩm</th>
                        <th style="width: 10%; min-width: 150px;">Danh mục</th>
                        <th style="width: 8%; min-width: 80px;">Giá</th>
                        <th style="width: 10%; min-width: 60px;">Số lượng</th>
                        <th style="width: 15%; min-width: 150px;">Biến thể</th>
                        <th style="width: 10%; min-width: 60px;">Trạng thái</th>
                        <th style="width: 25%; min-width: 250px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = (ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1;
                        foreach (var product in Model)
                        {
                            List<VariantDto> variants = new List<VariantDto>();
                            if (product.ProductVariants != null)
                            {
                                variants = product.ProductVariants.Select(v => new VariantDto
                                {
                                    Id = v.Id,
                                    SizeId = v.SizeId,
                                    ColorId = v.ColorId,
                                    StockQuantity = v.StockQuantity,
                                    VariantPrice = v.VariantPrice,
                                    VariantImageUrl = v.VariantImageUrl ?? (v.ProductImages != null && v.ProductImages.Any(pi => pi.IsMain)
                                        ? v.ProductImages.First(pi => pi.IsMain).ImageUrl
                                        : null),
                                    IsActive = v.IsActive
                                }).ToList();
                            }
                            var variantsJson = Newtonsoft.Json.JsonConvert.SerializeObject(variants);

                            <tr>
                                <td>@index</td>
                                <td>@product.ProductCode</td>
                                <td>
                                    <div class="image-frame" style="border: 1px solid #ddd; border-radius: 5px; overflow: hidden; display: flex; align-items: center; justify-content: center; width: 50px; height: 50px; margin: 0;">
                                        @{
                                            string imageUrl = product.ImageUrl ?? (product.ProductImages != null && product.ProductImages.Any(i => i.IsMain)
                                                ? product.ProductImages.First(i => i.IsMain).ImageUrl
                                                : null);
                                        }
                                        @if (!string.IsNullOrEmpty(imageUrl) && System.IO.File.Exists(Server.MapPath(imageUrl)))
                                        {
                                            <img src="@Url.Content(imageUrl)" alt="@product.Name" style="max-width: 100%; max-height: 100%; object-fit: contain;" />
                                        }
                                        else
                                        {
                                            <span style="font-size: 12px; color: #666;">@product.Name</span>
                                        }
                                    </div>
                                </td>
                                <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; padding: 4px 8px;">@product.Name</td>
                                <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; padding: 4px 8px;">
                                    @(product.Subcategory != null ? product.Subcategory.Name + (product.Subcategory.Category != null ? " (" + product.Subcategory.Category.Name + ")" : "") : "Không có danh mục")
                                </td>
                                <td style="padding: 4px 8px;">@product.Price.ToString("N0") VNĐ</td>
                                <td style="padding: 4px 8px;">@product.StockQuantity</td>
                                <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; padding: 4px 8px;">
                                    @(product.ProductVariants != null && product.ProductVariants.Any() ? "Có biến thể" : "Không có biến thể")
                                </td>
                                <td>
                                    <span class="badge rounded-pill @(product.IsActive ? "bg-success" : "bg-danger")" style="padding: 4px 8px; font-size: 0.8rem;">
                                        @(product.IsActive ? "Hoạt động" : "Ngừng bán")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-1" style="flex-wrap: nowrap;">
                                        <button class="btn btn-sm btn-warning" onclick="editProduct(@product.Id, @product.SubcategoryId, '@product.ProductCode', '@product.Name', @product.Price, '@(product.Description ?? "")', '@product.IsActive.ToString().ToLower()', '@variantsJson', '@(product.ImageUrl ?? "")')">
                                            <i class="fas fa-edit me-1"></i> Sửa
                                        </button>
                                        <a href="@Url.Action("SanPhamBienThe", "Admin", new { productId = product.Id })" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle me-1"></i> Chi tiết
                                        </a>
                                        <a href="@Url.Action("DeleteProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                            <i class="fas fa-trash me-1"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted py-4">Không có sản phẩm nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("SanPham", "Admin", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })" aria-label="Previous">
                            <span aria-hidden="true">« Trước</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("SanPham", "Admin", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("SanPham", "Admin", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })" aria-label="Next">
                            <span aria-hidden="true">Sau »</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="text-center">
                <p>Hiển thị bản ghi @(ViewBag.CurrentPage * ViewBag.PageSize - ViewBag.PageSize + 1) đến @(ViewBag.CurrentPage * ViewBag.PageSize > ViewBag.TotalRecords ? ViewBag.TotalRecords : ViewBag.CurrentPage * ViewBag.PageSize) của @ViewBag.TotalRecords bản ghi</p>
            </div>
        }
    </div>
</div>

<!-- Modal chỉnh sửa sản phẩm -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Chỉnh sửa sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProductForm" action="@Url.Action("EditProduct", "Admin")" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="editProductId" name="Id" />
                    <input type="hidden" name="page" value=""/>
                    <div class="mb-3">
                        <label for="editSubcategoryId" class="form-label fw-bold">Danh mục con</label>
                        @if (subcategories != null && subcategories.Any())
                        {
                            <select name="SubcategoryId" id="editSubcategoryId" class="form-control" required>
                                <option value="">-- Chọn danh mục con --</option>
                                @foreach (var subcategory in subcategories)
                                {
                                    <option value="@subcategory.Id">
                                        @subcategory.Name @(subcategory.Category != null ? " (" + subcategory.Category.Name + ")" : "")
                                    </option>
                                }
                            </select>
                        }
                        else
                        {
                            <select class="form-control" id="editSubcategoryId" disabled>
                                <option>Không có danh mục con nào</option>
                            </select>
                            <p class="text-danger">Vui lòng thêm danh mục con trước khi chỉnh sửa sản phẩm.</p>
                        }
                        <span class="text-danger field-validation-error" data-valmsg-for="SubcategoryId" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="editProductCode" class="form-label fw-bold">Mã sản phẩm</label>
                        <input type="text" name="ProductCode" id="editProductCode" class="form-control" required maxlength="50" />
                        <span class="text-danger field-validation-error" data-valmsg-for="ProductCode" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="editName" class="form-label fw-bold">Tên sản phẩm</label>
                        <input type="text" name="Name" id="editName" class="form-control" required maxlength="200" />
                        <span class="text-danger field-validation-error" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="editPrice" class="form-label fw-bold">Giá mặc định</label>
                        <input type="number" name="Price" id="editPrice" class="form-control" required min="0" step="1000" />
                        <span class="text-danger field-validation-error" data-valmsg-for="Price" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="editImageFile" class="form-label fw-bold">Ảnh chính</label>
                        <input type="file" name="ImageFile" id="editImageFile" class="form-control" accept="image/*" />
                        <img id="editImagePreview" src="" style="max-width: 100px; margin-top: 10px; display: none;" alt="Ảnh sản phẩm" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Biến thể sản phẩm</label>
                        <div id="editVariantContainer" class="p-3 rounded" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
                            <!-- Danh sách biến thể hiện có sẽ được thêm vào đây -->
                        </div>
                        <button type="button" class="btn btn-sm btn-success mt-2" onclick="showVariantForm(false)">
                            <i class="fas fa-plus me-1"></i> Thêm biến thể mới
                        </button>
                    </div>

                    <div class="mb-3">
                        <label for="editDescription" class="form-label fw-bold">Mô tả</label>
                        <textarea name="Description" id="editDescription" class="form-control" rows="3"></textarea>
                        <span class="text-danger field-validation-error" data-valmsg-for="Description" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="editIsActive" class="form-label fw-bold">Trạng thái</label>
                        <div class="form-check">
                            <input type="checkbox" name="IsActive" id="editIsActive" value="true" class="form-check-input" />
                            <label class="form-check-label" for="editIsActive">Hoạt động</label>
                            <input type="hidden" name="IsActive" value="false" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary" @(subcategories != null && subcategories.Any() ? "" : "disabled")>
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i> Đóng
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal thêm/chỉnh sửa biến thể -->
<div class="modal fade" id="addVariantModal" tabindex="-1" aria-labelledby="addVariantModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addVariantModalLabel">Thêm biến thể mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addVariantForm" enctype="multipart/form-data">
                    <input type="hidden" id="variantProductId" />
                    <input type="hidden" id="variantId" />
                    <input type="hidden" id="isEditMode" value="false" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Kích thước <span class="text-danger">*</span></label>
                        <select id="variantSizeId" class="form-control" required>
                            <option value="">-- Chọn kích thước --</option>
                            @foreach (var size in sizes)
                            {
                                <option value="@size.Id">@size.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Màu sắc <span class="text-danger">*</span></label>
                        <select id="variantColorId" class="form-control" required>
                            <option value="">-- Chọn màu sắc --</option>
                            @foreach (var color in colors)
                            {
                                <option value="@color.Id">@color.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số lượng <span class="text-danger">*</span></label>
                        <input type="number" id="variantStockQuantity" class="form-control" required min="0" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ảnh biến thể</label>
                        <input type="file" id="variantImageFile" class="form-control" accept="image/*" />
                        <img id="variantImagePreview" src="" style="max-width: 100px; margin-top: 10px; display: none;" alt="Ảnh biến thể" />
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i> Đóng
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table th, .table td {
            padding: 4px 6px;
            vertical-align: middle;
        }

            .table th:nth-child(3), .table td:nth-child(3) {
                padding: 4px 4px;
            }

            .table th:nth-child(4), .table td:nth-child(4) {
                padding: 4px 8px;
            }

            .table th:nth-child(10), .table td:nth-child(10) {
                min-width: 200px;
            }

        .image-frame {
            margin: 0;
        }

        .variant-image {
            max-width: 50px;
            max-height: 50px;
            object-fit: contain;
        }

        .variant-row {
            transition: all 0.2s ease;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            background-color: #fff;
            padding: 15px;
            margin-bottom: 15px;
        }

            .variant-row:hover {
                background-color: #f8f9fa;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }

            .variant-row .form-label {
                font-size: 0.9rem;
                color: #333;
            }

        #editVariantContainer {
            max-height: 400px;
            overflow-y: auto;
            padding: 10px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
        }

            #editVariantContainer .variant-row:last-child {
                margin-bottom: 0;
            }
    </style>

    <script>
        const sizes = @Html.Raw(Json.Encode(sizes.Select(s => new { s.Id, s.Name }).ToList()));
        const colors = @Html.Raw(Json.Encode(colors.Select(c => new { c.Id, c.Name }).ToList()));

        $(document).ready(function () {
            $("#addProductForm").validate({
                rules: {
                    SubcategoryId: { required: true },
                    ProductCode: { required: true, maxlength: 50 },
                    Name: { required: true, maxlength: 200 },
                    Price: { required: true, number: true, min: 0 }
                },
                messages: {
                    SubcategoryId: { required: "Vui lòng chọn danh mục con" },
                    ProductCode: {
                        required: "Vui lòng nhập mã sản phẩm",
                        maxlength: "Mã sản phẩm không được dài quá 50 ký tự"
                    },
                    Name: {
                        required: "Vui lòng nhập tên sản phẩm",
                        maxlength: "Tên sản phẩm không được dài quá 200 ký tự"
                    },
                    Price: {
                        required: "Vui lòng nhập giá sản phẩm",
                        number: "Giá phải là một số",
                        min: "Giá không được nhỏ hơn 0"
                    }
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });

            $("#editProductForm").validate({
                rules: {
                    SubcategoryId: { required: true },
                    ProductCode: { required: true, maxlength: 50 },
                    Name: { required: true, maxlength: 200 },
                    Price: { required: true, number: true, min: 0 }
                },
                messages: {
