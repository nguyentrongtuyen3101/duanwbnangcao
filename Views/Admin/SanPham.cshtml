        function showVariantForm(isEdit, variantData = null) {
            const productId = $("#editProductId").val();
            $("#variantProductId").val(productId);

            if (isEdit && variantData) {
                $("#addVariantModalLabel").text("Chỉnh sửa biến thể");
                $("#isEditMode").val("true");
                $("#variantId").val(variantData.Id);
                $("#variantSizeId").val(variantData.SizeId);
                $("#variantColorId").val(variantData.ColorId);
                $("#variantStockQuantity").val(variantData.StockQuantity);
                if (variantData.VariantImageUrl) {
                    $("#variantImagePreview").attr("src", variantData.VariantImageUrl.startsWith('/') ? variantData.VariantImageUrl : '/' + variantData.VariantImageUrl).show();
                } else {
                    $("#variantImagePreview").hide();
                }
            } else {
                $("#addVariantModalLabel").text("Thêm biến thể mới");
                $("#isEditMode").val("false");
                $("#variantId").val('');
                $("#variantSizeId").val('');
                $("#variantColorId").val('');
                $("#variantStockQuantity").val('');
                $("#variantImageFile").val('');
                $("#variantImagePreview").hide();
            }

            $("#addVariantModal").modal("show");
        }

        function saveVariantViaAjax() {
            const isEditMode = $("#isEditMode").val() === "true";
            const productId = $("#variantProductId").val();
            const variantId = $("#variantId").val();
            const sizeId = $("#variantSizeId").val();
            const colorId = $("#variantColorId").val();
            const stockQuantity = $("#variantStockQuantity").val();
            const variantImageFile = $("#variantImageFile")[0].files[0];

            const formData = new FormData();
            if (isEditMode) {
                formData.append("variantId", variantId);
            } else {
                formData.append("productId", productId);
            }
            formData.append("sizeId", sizeId);
            formData.append("colorId", colorId);
            formData.append("stockQuantity", stockQuantity);
            if (variantImageFile) {
                formData.append("variantImageFile", variantImageFile);
            }

            const url = isEditMode ? '@Url.Action("EditProductVariant", "Admin")' : '@Url.Action("AddProductVariant", "Admin")';

            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        const variant = response.variant;
                        const size = sizes.find(s => s.Id == variant.SizeId)?.Name || "Không xác định";
                        const color = colors.find(c => c.Id == variant.ColorId)?.Name || "Không xác định";
                        const row = `
                            <div class="variant-row mb-3 p-3 border rounded bg-white shadow-sm" data-variant-id="${variant.Id}">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold mb-1">Kích thước</label>
                                        <p>${size}</p>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold mb-1">Màu sắc</label>
                                        <p>${color}</p>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold mb-1">Số lượng</label>
                                        <p>${variant.StockQuantity}</p>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <button type="button" class="btn btn-sm btn-warning me-1" onclick='showVariantForm(true, {Id: ${variant.Id}, SizeId: ${variant.SizeId}, ColorId: ${variant.ColorId}, StockQuantity: ${variant.StockQuantity}, VariantImageUrl: "${variant.VariantImageUrl || ''}"})'>
                                            <i class="fas fa-edit me-1"></i> Sửa
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteVariant(${variant.Id})">
                                            <i class="fas fa-trash me-1"></i> Xóa
                                        </button>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold mb-1">Ảnh biến thể</label>
                                        ${variant.VariantImageUrl
                                            ? `<div class="image-frame" style="border: 1px solid #ddd; border-radius: 5px; overflow: hidden; display: flex; align-items: center; justify-content: center; width: 50px; height: 50px; margin: 0;">
                                                 <img src="${variant.VariantImageUrl.startsWith('/') ? variant.VariantImageUrl : '/' + variant.VariantImageUrl}" style="max-width: 100%; max-height: 100%; object-fit: contain;" onerror="this.src='/images/placeholder.png'" />
                                               </div>`
                                            : '<p>Không có</p>'
                                        }
                                    </div>
                                </div>
                            </div>`;

                        if (isEditMode) {
                            $(`div[data-variant-id="${variant.Id}"]`).replaceWith(row);
                        } else {
                            $("#editVariantContainer").append(row);
                        }
                        $("#addVariantModal").modal("hide");
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Đã có lỗi xảy ra khi lưu biến thể.");
                }
            });
        }

        function deleteVariant(variantId) {
            if (!confirm("Bạn có chắc muốn xóa biến thể này?")) return;

            $.ajax({
                url: '@Url.Action("DeleteProductVariant", "Admin")',
                type: 'POST',
                data: { variantId: variantId },
                success: function (response) {
                    if (response.success) {
                        $(`div[data-variant-id="${variantId}"]`).remove();
                        alert(response.message);
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Đã có lỗi xảy ra khi xóa biến thể.");
                }
            });
        }

